{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@distributed-chat-system/be-accounts": ["libs/be/accounts/src/index.ts"],
      "@distributed-chat-system/be-api-gateway": [
        "libs/be/api-gateway/src/index.ts"
      ],
      "@distributed-chat-system/be-chat": ["libs/be/chat/src/index.ts"],
      "@distributed-chat-system/be-rooms": ["libs/be/rooms/src/index.ts"],
      "@distributed-chat-system/be-server": ["libs/be/server/src/index.ts"],
      "@distributed-chat-system/fe-controls": ["libs/fe/controls/src/index.ts"],
      "@distributed-chat-system/fe-guard": ["libs/fe/guard/src/index.ts"],
      "@distributed-chat-system/fe-main": ["libs/fe/main/src/index.ts"],
      "@distributed-chat-system/fe-pages": ["libs/fe/pages/src/index.ts"],
      "@distributed-chat-system/fe-system": ["libs/fe/system/src/index.ts"],
      "@distributed-chat-system/shared-model": [
        "libs/shared/model/src/index.ts"
      ],
      "@distributed-chat-system/shared-utils": [
        "libs/shared/utils/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
